<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_all"
    tools:context=".activity.ProductDetailActivity">


    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Product Details"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toEndOf="@+id/imageView69"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView69"
        android:layout_width="24dp"
        android:layout_height="25dp"
        android:layout_marginTop="36dp"
        android:tag="back_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_muitentrai" />

    <ImageView
        android:id="@+id/btnHeart"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/icon_heart1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toEndOf="@+id/textView28"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView71"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintStart_toEndOf="@+id/btnHeart"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_share" />

    <ImageView
        android:id="@+id/imageView72"
        android:layout_width="393dp"
        android:layout_height="226dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView28"
        app:srcCompat="@drawable/khung_product" />

    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="299dp"
        android:layout_height="186dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView72"
        app:srcCompat="@drawable/icon_error" />

    <ImageView
        android:id="@+id/imageView77"
        android:layout_width="393dp"
        android:layout_height="94dp"
        android:layout_marginBottom="-10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/khung_product_nav" />

    <ImageButton
        android:id="@+id/btnCart"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/bg_see_cart"
        android:foreground="@drawable/cyber_ripple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView77" />

    <ImageView
        android:id="@+id/imageView79"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnCart"
        app:layout_constraintEnd_toEndOf="@+id/btnCart"
        app:layout_constraintStart_toStartOf="@+id/btnCart"
        app:layout_constraintTop_toTopOf="@+id/btnCart"
        app:srcCompat="@drawable/icon_cart" />

    <ImageButton
        android:id="@+id/btnBuyNow"
        android:layout_width="144dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_buynow"
        android:foreground="@drawable/cyber_ripple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnCart"
        app:layout_constraintTop_toTopOf="@+id/imageView77"
        app:layout_constraintVertical_bias="0.488" />

    <ImageButton
        android:id="@+id/btnAddToCart"
        android:layout_width="144dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_add_to_cart"
        android:foreground="@drawable/cyber_ripple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnBuyNow"
        app:layout_constraintTop_toTopOf="@+id/imageView77" />

    <TextView
        android:id="@+id/textView47"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Add to Cart"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnAddToCart"
        app:layout_constraintEnd_toEndOf="@+id/btnAddToCart"
        app:layout_constraintStart_toEndOf="@+id/imageView83"
        app:layout_constraintTop_toTopOf="@+id/btnAddToCart" />

    <TextView
        android:id="@+id/textView46"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy Now"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnBuyNow"
        app:layout_constraintEnd_toEndOf="@+id/btnBuyNow"
        app:layout_constraintStart_toStartOf="@+id/btnBuyNow"
        app:layout_constraintTop_toTopOf="@+id/btnBuyNow" />

    <ImageView
        android:id="@+id/imageView83"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnAddToCart"
        app:layout_constraintEnd_toEndOf="@+id/btnAddToCart"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="@+id/btnAddToCart"
        app:layout_constraintTop_toTopOf="@+id/btnAddToCart"
        app:srcCompat="@drawable/icon_oder2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="419dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView77"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView72">

        <include
            android:id="@+id/item_product_detail"
            layout="@layout/item_product_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>
    <FrameLayout
        android:id="@+id/productDetailFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>