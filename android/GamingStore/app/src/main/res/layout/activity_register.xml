        android:textColor="#0ABDE3"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnRegister2"
        app:layout_constraintEnd_toEndOf="@+id/btnRegister2"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="@+id/btnRegister2"
        app:layout_constraintTop_toTopOf="@+id/btnRegister2"
        app:layout_constraintVertical_bias="0.448" />

