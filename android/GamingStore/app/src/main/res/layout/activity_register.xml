        app:layout_constraintTop_toBottomOf="@+id/imageView26" />

    <TextView
        android:id="@+id/btnText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Take OTP"
        android:textColor="#0ABDE3"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnTakeOTP"
        app:layout_constraintEnd_toEndOf="@+id/btnTakeOTP"
        app:layout_constraintStart_toStartOf="@+id/btnTakeOTP"
        app:layout_constraintTop_toTopOf="@+id/btnTakeOTP" />

    <ImageView
